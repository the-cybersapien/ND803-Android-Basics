<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/story_item"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/story_item_imageview"
            android:adjustViewBounds="true"
            tools:src="@drawable/placeholder"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/story_item_title"
                tools:text="Heading"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:padding="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    tools:text="By line"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/story_item_byline"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    tools:text="Oct 6, 2016"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/story_item_date"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/story_item_trailing_text"
                tools:text="Display the details here. Maximum two lines such as not to create a discrepency in the images."
                android:maxLines="2"
                android:typeface="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>
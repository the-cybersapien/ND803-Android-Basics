<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Settings" >

    <ListPreference
        android:defaultValue="@string/settings_section_default_value"
        android:key="@string/settings_section_key"
        android:title="@string/settings_section_label"
        android:entries="@array/settings_sections_label"
        android:entryValues="@array/settings_sections_values"
        />

    <EditTextPreference
        android:defaultValue="@string/settings_number_default_value"
        android:key="@string/settings_number_key"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:title="@string/settings_number_label"
        />

</PreferenceScreen>